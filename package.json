{
  "name": "GraduateNU",
  "private": true,
  "engines": {
    "node": ">= 12.x"
  },
  "homepage": "https://graduatenu.com",
  "workspaces": [
    "frontend",
    "scrapers",
    "api"
  ],
  "scripts": {
    "start": "cd infrastructure/develop && ./compose-build.sh && ./run-servers.sh dev-build",
    "start:v2": "concurrently \"yarn dev:server:v2\" \"yarn dev:app\" \"yarn dev:proxy\"",
    "dev:server:v2": "cd api-v2 && yarn dev",
    "dev:app": "cd frontend && yarn start",
    "dev:proxy": "node infrastructure/develop/dev-proxy.js",
    "dev:db:up": "docker-compose -f infrastructure/develop/docker-compose.yml up -d",
    "dev:db:down": "docker-compose -f infrastructure/develop/docker-compose.yml down",
    "prod-start": "docker-compose up --build",
    "prod-start-aws": "cd infrastructure/develop && ./compose-build.sh && ./run-servers.sh prod-build",
    "generate-documentation": "cd api && rdoc && cd .. && mv api/doc docs",
    "build": "cd frontend && CI=false react-app-rewired build",
    "test": "jest",
    "eject": "cd frontend && react-app-rewired eject",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "http-proxy-middleware": "^2.0.3",
    "husky": "^4.2.5"
  },
  "dependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
