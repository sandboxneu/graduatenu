{
  "name": "GraduateNU",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "homepage": "https://graduatenu.com",
  "workspaces": [
    "frontend",
    "scrapers",
    "api"
  ],
  "scripts": {
    "start": "cd frontend && react-scripts start",
    "build": "cd frontend && react-scripts build",
    "test": "jest",
    "eject": "cd frontend && react-scripts eject",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "husky": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
