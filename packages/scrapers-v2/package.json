{
  "name": "@graduate/scrapers-v2",
  "version": "1.0.0",
  "description": "scrapers used to generate essential data such as majors and plans",
  "private": true,
  "scripts": {
    "test": "yarn generate && jest",
    "scrape": "yarn generate && ts-node ./src/main.ts",
    "generate": "yarn g:concurrently \"yarn parse:generate\" \"yarn tokenize:generate\"",
    "parse:generate": "cd src/parse && nearleyc grammar.ne -o grammar.js",
    "tokenize:generate": "cd src/tokenize && nearleyc catalogEntryGrammar.ne -o catalogEntryGrammar.js",
    "parse:test": "nearley-test src/parse/grammar.js"
  },
  "dependencies": {
    "@graduate/common": "*",
    "cheerio": "1.0.0-rc.3",
    "nearley": "^2.20.1",
    "ts-node": "^10.8.0",
    "undici": "^5.8.2"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.13",
    "@types/jest": "^27",
    "@types/nearley": "^2",
    "@types/node": "^16",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
